@model IEnumerable<Project.net7Oct.Models.Product>

@{
    ViewBag.Title = "Index";
}


<br />
<h2 style="color:#3b5d50;">Products</h2>

<br />

@if (User.IsInRole("Admin"))
{
    <p style="margin-bottom:15px;">
        @Html.ActionLink("Create New", "Create", null, new { style = "color:#3b5d50;text-decoration:none;" })
    </p>
}

<table style="width:100%;border-collapse:collapse;background-color:white;">
    <tr>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;">
            @Html.DisplayNameFor(model => model.StockQuantity)
        </th>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;">
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th style="background-color:#3b5d50;color:white;padding:8px;border:1px solid #3b5d50;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:white;">
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.DisplayFor(modelItem => item.StockQuantity)
            </td>
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td style="padding:8px;border:1px solid #3b5d50;">
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { style = "color:#3b5d50;text-decoration:none;" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { style = "color:#3b5d50;text-decoration:none;" }) |
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { style = "color:#3b5d50;text-decoration:none;" })
                }
            </td>
        </tr>
    }
</table>

<br />
