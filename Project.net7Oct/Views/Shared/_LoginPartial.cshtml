@using Microsoft.AspNet.Identity

<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="background-color:#3b5d50;">
    @if (Request.IsAuthenticated)
    {
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
        </li>

        @*<li class="dropdown-item text-white">Hello, @User.Identity.Name</li>*@
        <li>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="dropdown-item text-white" style="background:none; border:none; width:100%; text-align:left;">
                    Log off
                </button>
            }
        </li>
    }
    else
    {
        <li>
            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "dropdown-item text-white" })
        </li>
        <li>
            @Html.ActionLink("Register", "Register", "Account", null, new { @class = "dropdown-item text-white" })
        </li>
    }
</ul>